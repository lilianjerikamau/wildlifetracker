{{#partial "content"}}

    {{#if editAnimal}}
        <h1>Edit this Task!</h1>
        <form action="/animals/{{animal.id}}" method="post">
            <br>
            <label for="newName">Edit this animal's description</label>
            <input id="newName" name="newName" type="text" value="{{animal.name}}">
            <br>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h2>Add a new Task!</h2>

        <form action="/animals" method="post">

                <label for="name">Task Description</label>
                <input id="name" name="name" type="text">

            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}